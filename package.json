{
  "name": "ai-note-desktop",
  "version": "1.0.0",
  "description": "AI Note Desktop App",
  "author": "You",
  "main": "electron.js",

  "scripts": {
    "react": "npm run dev --prefix frontend",
    "electron": "electron .",
    "dev": "concurrently \"npm run react\" \"npm run electron\"",
    "build-react": "npm run build --prefix frontend",
    "build": "npm run build-react && electron-builder --win --x64"
  },

  "devDependencies": {
    "electron": "^30.0.0",
    "concurrently": "^8.0.0",
    "electron-builder": "^24.0.0"
  },

  "build": {
    "appId": "ai.note.desktop",
    "productName": "AI Note Desktop",

    "directories": {
      "output": "dist"
    },

    "files": [
      "**/*"
    ],

    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      },
      {
        "from": "frontend/dist",
        "to": "frontend/dist"
      }
    ],

    "win": {
      "target": "nsis",
      "sign": null,
      "signAndEditExecutable": false
    },

    "forceCodeSigning": false,
    "cscLink": null,
    "cscKeyPassword": null,
    "npmRebuild": false
  }
}
